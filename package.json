{
  "name": "linter-moonscript",
  "main": "lib/init",
  "version": "1.2.0",
  "description": "Lint Moonscript sources with moonc",
  "repository": {
    "type": "git",
    "url": "https://github.com/AtomLinter/linter-moonscript"
  },
  "configSchema": {
    "executablePath": {
      "type": "string",
      "default": "moonc",
      "description": "Full path to the moonscript compiler."
    },
    "omitGlobalCheck": {
      "type": "boolean",
      "default": false,
      "description": "Omit \"accessing global\" warnings."
    }
  },
  "license": "MIT",
  "engines": {
    "atom": ">=1.4.0 <2.0.0"
  },
  "activationHooks": [
    "language-moonscript:grammar-used"
  ],
  "package-deps": [
    "linter:2.0.0",
    "language-moonscript"
  ],
  "scripts": {
    "test": "apm test",
    "lint": "eslint ."
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "globals": {
      "atom": true
    },
    "env": {
      "node": true
    }
  },
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "dependencies": {
    "atom-linter": "10.0.0",
    "atom-package-deps": "5.1.0",
    "xregexp": "4.2.4"
  },
  "devDependencies": {
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-import": "2.28.0",
    "jasmine-fix": "1.3.1"
  },
  "renovate": {
    "extends": [
      "config:base"
    ]
  }
}
