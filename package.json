{
  "name": "linter-moonscript",
  "main": "lib/init",
  "version": "1.0.0",
  "description": "Lint Moonscript sources with moonc",
  "repository": {
    "type": "git",
    "url": "https://github.com/AtomLinter/linter-moonscript"
  },
  "configSchema": {
    "executablePath": {
      "type": "string",
      "default": "moonc",
      "description": "Full path to the moonscript compiler."
    }
  },
  "license": "MIT",
  "engines": {
    "atom": ">=1.4.0 <2.0.0"
  },
  "activationHooks": [
    "language-moonscript:grammar-used"
  ],
  "package-deps": [
    "linter",
    "language-moonscript"
  ],
  "scripts": {
    "test": "apm test",
    "lint": "eslint ."
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "globals": {
      "atom": true
    },
    "env": {
      "node": true
    }
  },
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "dependencies": {
    "atom-linter": "^8.0.0",
    "atom-package-deps": "^4.3.1",
    "xregexp": "~3.1.1"
  },
  "devDependencies": {
    "eslint": "^3.12.0",
    "eslint-config-airbnb-base": "^11.0.0",
    "eslint-plugin-import": "^2.2.0"
  }
}
